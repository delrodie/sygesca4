{% extends 'security.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h1>Connexion</h1>
<form method="post">
    {% if error %}
        <div class="alert danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="txt_field">
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus>
        <span></span>
        <label>Nom utilisateur</label>
    </div>
    <div class="txt_field">
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <span></span>
        <label>Mot de passe</label>
    </div>
    <div class="pass">.</div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


    <div class="pass"></div>
    <input type="submit" value="Login">
    <div class="signup_link">.</div>
</form>

{% endblock %}
