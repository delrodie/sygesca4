                    </div>

                </div>

                <section class="recent">
                    <div class="activity-grid">
                        <div class="activity-card">
                            <h3>Recent Activity</h3>

                            <div class="table-responsive">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Project</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Team</th>
