{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Liste des membres de l'ASCCI{% endblock %}

{% block body %}
    <main>
        <h2 class="dash-title">Liste des adhérants</h2>

        <section class="recent">
            <div class="tableau-grid">
                <div class="activity-card">
                    <div class="formulaire">
                        <div class="card-body">
                            <form action="">
                                <label for="search_region">Region</label>
                                <select name="region" id="search_region" class="select2">
                                    <option value="">-- Selectionnez la région --</option>
                                    {% for region in regions %}
                                        <option value="{{ region.id }}">{{ region.nom }}</option>
                                    {% endfor %}
                                </select>
                            </form>
                        </div>
                        <div class="card-body">
                            <form action="">
                                <label for="search_district">District</label>
                                <select name="district" id="search_district">
                                    <option value="">-- Selectionnez le district --</option>
                                </select>
                            </form>
                        </div>
                        <div class="card-body">
                            <form action="">
                                <label for="search_groupe">Groupe</label>
                                <select name="groupe" id="search_groupe">
                                    <option value="">-- Selectionnez le groupe --</option>
                                </select>
                            </form>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="liste" class="compact display" style="width: 100%;">
                            <thead>
                            <tr>
                                <th>Region</th>
                                <th>Statut</th>
                                <th>Nom</th>
                                <th>Prenoms</th>
                                <th>Matricule</th>
                                <th>Carte</th>
                                <th>Fonction</th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('backend/css/form.css')) }}">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#liste').DataTable( {
                "ajax": {
                    url: '{{ absolute_url(path("sygesca_gestion_ajax")) }}',
                    dataSrc: ''
                },
                "columns": [
                    { "data": "region" },
                    { "data": "statut" },
                    { "data": "nom" },
                    { "data": "prenoms" },
                    { "data": "matricule" },
                    { "data": "carte" },
                    { "data": "fonction" }
                ],
                dom: 'Bfrtip',
                buttons: [ {
                    extend: 'excelHtml5',
                    autoFilter: true,
                    sheetName: 'Exported data'
                } ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json'
                },
                responsive: true
            } );
        } );
    </script>
{% endblock %}
