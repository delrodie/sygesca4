{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Cotisation de la region {{ region.nom }}{% endblock %}

{% block body %}
    <main>
        <h2 class="dash-title">Cotisation de {{ region.nom|title }}</h2>

        <div class="dash-cards" style="margin-top: 30px;">

            <div class="card-single">
                <div class="card-body">
                    <span class="ti-briefcase"></span>
                    <div>
                        <h5>Total cotisation</h5>
                        <h4>{{ finance.montant|number_format(0,'','.') }} FCFA</h4>
                    </div>
                </div>
                <div class="card-footer">
                    <a href=""></a>
                </div>
            </div>


            <div class="card-single">
                <div class="card-body">
                    <span class="ti-reload"></span>
                    <div>
                        <h5>Total ristourne</h5>
                        <h4>{{ finance.ristourne|number_format(0,'','.') }} FCFA</h4>
                    </div>
                </div>
                <div class="card-footer">
                    <a href=""></a>
                </div>
            </div>


            <div class="card-single">
                <div class="card-body">
                    <span class="ti-check-box"></span>
                    <div>
                        <h5>Total frais</h5>
                        <h4>{{ finance.frais|number_format(0,'','.') }} FCFA</h4>
                    </div>
                </div>
                <div class="card-footer">
                    <a href=""></a>
                </div>
            </div>

        </div>

        <section class="recent">
            <div class="tableau-grid">
                <div class="activity-card">
                    <div class="formulaire">
                        <div class="card-body">
                            <form action="" onchange="this.submit()" id="form_region">
                                <label for="search_region">Region</label>
                                <select name="region" id="search_region" class="select2">
                                    <option value="">-- Selectionnez la r√©gion --</option>
                                    {% for region in regions %}
                                        <option value="{{ region.id }}">{{ region.nom }}</option>
                                    {% endfor %}
                                </select>
                            </form>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="liste" class="compact display" style="width: 100%;">
                            <thead>
                            <tr style="text-align:center;">
                                <th>ID</th>
                                <th>DISTRICT</th>
                                <th>GROUPE</th>
                                <th>STATUT</th>
                                <th>NOM & PRENOMS</th>
                                <th>DATE N.</th>
                                <th>SEXE</th>
                                <th>FONCTION</th>
                                <th>MATRICULE</th>
                                <th>CARTE</th>
                                <th>MONTANT</th>
                                <th>RISTOURNE</th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('backend/css/form.css')) }}">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function() {

            $('#liste').DataTable( {
                "ajax": {
                    url: '{{ absolute_url(path("sygesca_gestion_ajax")) }}?region='+ {{ region.id }},
                    dataSrc: ''
                },
                "columns": [
                    { "data": "loop_index" },
                    { "data": "district" },
                    { "data": "groupe" },
                    { "data": "statut" },
                    { "data": "identite_civile" },
                    { "data": "date_naissance" },
                    { "data": "sexe" },
                    { "data": "fonction" },
                    { "data": "matricule" },
                    { "data": "carte" },
                    { "data": "montant_sans_frais" },
                    { "data": "ristourne" },
                ],
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json'
                },
                responsive: true
            } );
        } );
    </script>
{% endblock %}
